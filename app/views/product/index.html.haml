.row
  %h2.text-center Authorized Products
  %hr
  %h3.text-center.underline Audio Products
  .col-xs-12.col-md-6.col-md-offset-1
    #brand_carousel.carousel.slide.left{'data-ride' => 'carousel'}
      .carousel-inner{role: 'listbox'}
        .item.active
          %a{href: 'http://www.sonos.com', target: '_blank'}
            %img.authorized-logo{src: image_path('sonos-logo.jpg')}
        .item
          %a{href: 'http://www.control4.com', target: '_blank'}
            %img.authorized-logo{src: image_path('control4-logo.png')}
      %a.left.carousel-control{"data-slide" => "prev", :href => "#brand_carousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#brand_carousel", :role => "button"}
